<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:minWidth="@dimen/square_item_width"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="@dimen/square_item_height">

        <android.support.constraint.ConstraintLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/square_title"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/square_photo"/>

            <TextView
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/square_photo"
                android:text="ahah"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/square_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:layout_height="wrap_content" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</layout>